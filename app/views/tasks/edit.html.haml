.container
  %h2 Edit Task
  = form_with(model: @task, url: board_task_path(@task.board, @task), method: 'patch', local: true) do |f|
    %div
      = f.label :eyecatch, 'アイキャッチ', class: 'mark'
    %div
      = f.file_field :eyecatch, class: 'file'
    %div
      = f.label :title, 'Name', class: 'mark'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, 'Description', class: 'mark'
    %div
      = f.text_area :content, class: 'area'
    %div
      = f.label :deadline, 'Deadline', class: 'mark'
    %div
      = f.datetime_select  :deadline
    = f.submit 'Submit', class: 'btn-submit'
